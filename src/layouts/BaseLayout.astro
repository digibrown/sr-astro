---
import '../styles/global.css';
const {
  title = 'SendRemit',
  description = 'Compare money transfer providers and get the best FX rates',
  image = '/og-image.png',
  ogType = 'website'
} = Astro.props;

const site = Astro.site?.toString();
const url = Astro.url;
const canonical = site ? new URL(url.pathname, site).toString() : url.pathname;
const ogImage = image?.startsWith('http') ? image : (site ? new URL(image, site).toString() : image);
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" sizes="any" href="/logo.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32.png" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="canonical" href={canonical} />
    <meta name="theme-color" content="#0e1530" />
    <meta property="og:site_name" content="SendRemit" />
    <meta property="og:type" content={ogType} />
    {site && <meta property="og:url" content={canonical} />}
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
  </head>
  <body>
    <header>
      <div style="display:flex; align-items:center; justify-content:space-between; gap:16px;">
        <a href="/" style="display:flex; align-items:center; gap:10px;">
          <img src="/logo.svg" alt="SendRemit" width="28" height="28" />
          <strong>sendremit.com</strong>
        </a>
        <nav style="display:flex; gap:14px;">
          <a href="/rates/">Rates</a>
          <a href="/guides/">Guides</a>
        </nav>
      </div>
    </header>
    <main>
      <slot />
    </main>
    <footer>
      <div class="muted" style="display:flex; justify-content:space-between; gap:8px; flex-wrap:wrap;">
        <span>© {new Date().getFullYear()} SendRemit</span>
        <span>Compare providers • Save on transfers</span>
        <span><a href="https://www.bestexchangerates.com/" rel="noopener" target="_blank" class="muted">bestexchangerates.com</a></span>
      </div>
    </footer>
  </body>

</html>
