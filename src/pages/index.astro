---
import BaseLayout from '../layouts/BaseLayout.astro';
import RateWidget from '../components/RateWidget.astro';
import RateTable from '../components/RateTable.astro';
---
<BaseLayout title="SendRemit â€¢ Fast, fair remittances">
  <section class="grid cols-2">
    <div class="card">
      <h1 style="margin:0 0 8px;">Compare remittance providers</h1>
      <p class="muted">See live FX rates, fees, and delivery options across providers to get the best deal for your next money transfer.</p>
      <div style="margin-top:12px; display:flex; gap:10px;">
        <a class="btn" href="/rates/">Compare live rates</a>
        <a class="btn" style="background:transparent; border:1px solid rgba(255,255,255,.2)" href="/guides/">How to compare</a>
      </div>
    </div>
    <RateWidget pair="USD-PHP" showSelector={true} pairsOptions={["USD-PHP","USD-MXN","USD-NGN","EUR-PHP","USD-INR","USD-PKR"]} />
  </section>

  <div style="height: 10px;"></div>

  <RateTable />
</BaseLayout>
