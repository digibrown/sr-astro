---
import BaseLayout from '../../layouts/BaseLayout.astro';
import RateWidget from '../../components/RateWidget.astro';
import pairs from '../../data/pairs.json';

export async function getStaticPaths() {
  return (pairs as string[]).map((p) => ({ params: { pair: p } }));
}

const { pair } = Astro.params;
const display = (pair || '').toUpperCase();
---
<BaseLayout title={`Compare ${display} • SendRemit`}>
  <a href="/rates/" class="muted">← Back to rates</a>
  <h1 style="margin:6px 0 8px;">Compare providers: {display}</h1>
  <RateWidget pair={display} />
</BaseLayout>
